<Application x:Class="Techugo.POS.ECOm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Techugo.POS.ECOm" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design theme & defaults -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

                <!-- Pick your color palettes -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Override primary color to black -->
            <Color x:Key="MaterialDesignPrimaryColor">#FF000000</Color>
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{StaticResource MaterialDesignPrimaryColor}" />
            <SolidColorBrush x:Key="PrimaryHueMidBrush"  Color="{StaticResource MaterialDesignPrimaryColor}" />
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="{StaticResource MaterialDesignPrimaryColor}" />

            <!-- Application-wide font family (fallback list). WPF will try each name in order; names not installed are skipped. -->
            <FontFamily x:Key="AppFont">ui-sans-serif, system-ui, "Segoe UI", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji", sans-serif</FontFamily>

            <Style x:Key="RoundedWhiteButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#d4d4d4"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#e9ebef"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="RoundedGreenButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#00a63e"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#008236"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="RoundedRedButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#d4183d"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="8"
            SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#d73655"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="RoundedBlackButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#030213"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
CornerRadius="8"
SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#030213"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="Transparent" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            </Style>

            <!-- Ensure text rendering uses app font -->
            <Style TargetType="TextBlock">
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                <!-- Optional: default UI font -->
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            </Style>

            <!-- Controls that host text (Buttons, Labels, etc.) -->
            <Style TargetType="Control">
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                <!-- Apply application font to controls -->
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
                <!-- Optional: default UI font -->
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            </Style>

            <!-- TextBox specific tweaks (optional) -->
            <Style TargetType="TextBox">
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            </Style>
        </ResourceDictionary>

        <!-- Keep layout rounding -->
        <Style TargetType="FrameworkElement">
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>

        <!-- Removed invalid TargetType="UIElement" style (UIElement is not allowed as Style.TargetType). Use Control/TextBlock/TextElement instead. -->

        <!-- Apply ClearType and Display text formatting to most controls -->
        <Style TargetType="TextBlock">
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        </Style>

        <!-- Controls that host text (Buttons, Labels, etc.) -->
        <Style TargetType="Control">
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            <!-- Ensure controls use the app font -->
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <!-- Optional: default UI font -->
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        </Style>

        <!-- TextBox specific tweaks (optional) -->
        <Style TargetType="TextBox">
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        </Style>

        <!-- Apply to Flow/Document text elements too -->
        <Style TargetType="{x:Type TextElement}">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        </Style>
    </Application.Resources>
</Application>
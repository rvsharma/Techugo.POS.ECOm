							<TextBlock Text="Export Report" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>-->
				</StackPanel>
			</Grid>

			<!-- Stat cards -->
			<UniformGrid HorizontalAlignment="Stretch" Margin="0,0,0,18" Columns="2">
				<!-- Total Sales -->
				<Border
					Background="#fff7ed"
					BorderBrush="#e0e0e0"
					BorderThickness="1"
					CornerRadius="20"
					Margin="0,8,8,8"
					Padding="0"
					Height="150">
					<Border
						Background="#f0fdf4"
						BorderBrush="#00c951"
						BorderThickness="4,0,0,0"
						CornerRadius="20">
						<StackPanel Margin="24">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" Text="Average Daily Sales" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
								<svg:SvgViewbox Source="/Assets/Images/dollar.svg" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
							</Grid>
                        <TextBlock  FontWeight="Bold" FontSize="26" Margin="0,16,0,0" Foreground="#008236" >
                        <Run Text="₹"/>
                        <Run Name="AverageDailySalesTextBlock"/>
                        </TextBlock>

                        <TextBlock Name="AverageDailySalesIncreaseTextBlock"  FontSize="12" Foreground="#00c951" Margin="0,8,0,0"/>
						</StackPanel>
					</Border>
				</Border>

				<!-- Total Orders -->
				<Border
					Background="#fff7ed"
					BorderBrush="#e0e0e0"
					BorderThickness="1"
					CornerRadius="20"
					Margin="8"
					Padding="0"
					Height="150">
					<Border
						Background="#eff6ff"
						BorderBrush="#2b7fff"
						BorderThickness="4,0,0,0"
						CornerRadius="20">
						<StackPanel Margin="24">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" Text="Today's Earnings" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
								<svg:SvgViewbox Source="/Assets/Images/box.svg" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
							</Grid>
                        <TextBlock FontWeight="Bold" FontSize="26" Margin="0,16,0,0" Foreground="#1447e6">
                        <Run Text="₹"/>
                        <Run Name="TodayEarningsTextBlock"/>
                        </TextBlock>
                        <TextBlock Name="TodayEarningsIncreaseTextBlock" FontSize="12" Foreground="#2b7fff" Margin="0,8,0,0" />
						</StackPanel>
					</Border>
				</Border>


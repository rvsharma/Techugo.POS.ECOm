<UserControl x:Class="Techugo.POS.ECOm.Pages.SalesDashboardPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"  xmlns:sys="clr-namespace:System;assembly=mscorlib"

             Height="Auto" Width="Auto">
	<UserControl.Resources>
        <!-- Reusable styles -->
		<Style x:Key="CardStyle" TargetType="Border">
			<Setter Property="CornerRadius" Value="12"/>
			<Setter Property="Padding" Value="18"/>
			<Setter Property="Background" Value="#FFF"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#22000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="SmallLabel" TargetType="TextBlock">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Foreground" Value="#333"/>
		</Style>
		<Style x:Key="BigNumber" TargetType="TextBlock">
			<Setter Property="FontSize" Value="28"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Foreground" Value="#0A7F3A"/>
		</Style>
		<Style x:Key="BlueNumber" TargetType="TextBlock" BasedOn="{StaticResource BigNumber}">
			<Setter Property="Foreground" Value="#1E6EEA"/>
		</Style>
		<Style x:Key="PurpleNumber" TargetType="TextBlock" BasedOn="{StaticResource BigNumber}">
			<Setter Property="Foreground" Value="#8A2BE2"/>
		</Style>
		<Style x:Key="TileStyle" TargetType="Border">
			<Setter Property="CornerRadius" Value="10"/>
			<Setter Property="Padding" Value="12"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="Background" Value="#F7F8FA"/>
			<Setter Property="Width" Value="120"/>
			<Setter Property="Height" Value="96"/>
		</Style>
		<Style x:Key="BigTileStyle" TargetType="Border">
			<Setter Property="CornerRadius" Value="10"/>
			<Setter Property="Padding" Value="12"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="Background" Value="#eff6ff"/>
		</Style>
	</UserControl.Resources>

	
		<StackPanel Margin="28">
			<!-- Header -->
			<Grid Margin="0,0,0,18">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<StackPanel Orientation="Vertical">
					<TextBlock Text="Sales Dashboard" FontSize="26" FontWeight="Bold" Foreground="#222"/>
					<TextBlock Text="Performance metrics and analytics" FontSize="13" Foreground="#777" Margin="0,6,0,0"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Top">
					<Border Background="#F5F6F8" CornerRadius="8" Padding="8" VerticalAlignment="Center">
						<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
							<!--<svg:SvgViewbox Source="/Assets/Images/calender.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="8,0,8,0"/>-->
                        <DatePicker Width="140"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
				SelectedDateChanged="DatePicker_SelectedDateChanged"
				DisplayDateEnd="{x:Static sys:DateTime.Today}"

                VerticalAlignment="Center">
                        </DatePicker>

                    </StackPanel>
					</Border>

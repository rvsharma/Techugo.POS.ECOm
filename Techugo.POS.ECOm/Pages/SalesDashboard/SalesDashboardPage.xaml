<UserControl x:Class="Techugo.POS.ECOm.Pages.SalesDashboardPage" xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
	<UserControl.Resources>
		<!-- Reusable styles -->
		<Style x:Key="CardStyle" TargetType="Border">
			<Setter Property="CornerRadius" Value="12"/>
			<Setter Property="Padding" Value="18"/>
			<Setter Property="Background" Value="#FFF"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect Color="#22000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="SmallLabel" TargetType="TextBlock">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Foreground" Value="#333"/>
		</Style>
		<Style x:Key="BigNumber" TargetType="TextBlock">
			<Setter Property="FontSize" Value="28"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Foreground" Value="#0A7F3A"/>
		</Style>
		<Style x:Key="BlueNumber" TargetType="TextBlock" BasedOn="{StaticResource BigNumber}">
			<Setter Property="Foreground" Value="#1E6EEA"/>
		</Style>
		<Style x:Key="PurpleNumber" TargetType="TextBlock" BasedOn="{StaticResource BigNumber}">
			<Setter Property="Foreground" Value="#8A2BE2"/>
		</Style>
		<Style x:Key="TileStyle" TargetType="Border">
			<Setter Property="CornerRadius" Value="10"/>
			<Setter Property="Padding" Value="12"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="Background" Value="#F7F8FA"/>
			<Setter Property="Width" Value="120"/>
			<Setter Property="Height" Value="96"/>
		</Style>
		<Style x:Key="BigTileStyle" TargetType="Border">
			<Setter Property="CornerRadius" Value="10"/>
			<Setter Property="Padding" Value="12"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="Background" Value="#eff6ff"/>
		</Style>
	</UserControl.Resources>

	
		<StackPanel Margin="28">
			<!-- Header -->
			<Grid Margin="0,0,0,18">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<StackPanel Orientation="Vertical">
					<TextBlock Text="Sales Dashboard" FontSize="26" FontWeight="Bold" Foreground="#222"/>
					<TextBlock Text="Performance metrics and analytics" FontSize="13" Foreground="#777" Margin="0,6,0,0"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Top">
					<Border Background="#F5F6F8" CornerRadius="8" Padding="8" VerticalAlignment="Center">
						<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
							<svg:SvgViewbox Source="/Assets/Images/calender.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="8,0,8,0"/>
							<ComboBox Width="120" SelectedIndex="0">
								<ComboBoxItem>Today</ComboBoxItem>
								<ComboBoxItem>Yesterday</ComboBoxItem>
								<ComboBoxItem>This Week</ComboBoxItem>
								<ComboBoxItem>This Month</ComboBoxItem>
							</ComboBox>
						</StackPanel>
					</Border>
					<Button Grid.Column="0"
							   Height="36"
							   Margin="0,0,8,0"
							   FontWeight="SemiBold"
							   Style="{StaticResource RoundedWhiteButtonStyle}"
							   HorizontalAlignment="Stretch"
							   Width="130">
						<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
							<svg:SvgViewbox Source="/Assets/Images/download.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="8,0,8,0"/>
							<TextBlock Text="Export Report" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
				</StackPanel>
			</Grid>

			<!-- Stat cards -->
			<UniformGrid HorizontalAlignment="Stretch" Margin="0,0,0,18" Columns="3">
				<!-- Total Sales -->
				<Border
					Background="#fff7ed"
					BorderBrush="#e0e0e0"
					BorderThickness="1"
					CornerRadius="20"
					Margin="0,8,8,8"
					Padding="0"
					Height="150">
					<Border
						Background="#f0fdf4"
						BorderBrush="#00c951"
						BorderThickness="4,0,0,0"
						CornerRadius="20">
						<StackPanel Margin="24">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" Text="Pending Request" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
								<svg:SvgViewbox Source="/Assets/Images/dollar.svg" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
							</Grid>
							<TextBlock Text="₹12,450" FontWeight="Bold" FontSize="26" Margin="0,16,0,0" Foreground="#008236" />
							<TextBlock Text="Today's revenue" FontSize="12" Foreground="#00c951" Margin="0,8,0,0"/>
						</StackPanel>
					</Border>
				</Border>

				<!-- Total Orders -->
				<Border
					Background="#fff7ed"
					BorderBrush="#e0e0e0"
					BorderThickness="1"
					CornerRadius="20"
					Margin="8"
					Padding="0"
					Height="150">
					<Border
						Background="#eff6ff"
						BorderBrush="#2b7fff"
						BorderThickness="4,0,0,0"
						CornerRadius="20">
						<StackPanel Margin="24">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" Text="Pending Request" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
								<svg:SvgViewbox Source="/Assets/Images/box.svg" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
							</Grid>
							<TextBlock Text="28" FontWeight="Bold" FontSize="26" Margin="0,16,0,0" Foreground="#1447e6"/>
							<TextBlock Text="Successfully fulfilled" FontSize="12" Foreground="#2b7fff" Margin="0,8,0,0" />
						</StackPanel>
					</Border>
				</Border>

				<!-- Average Order Value -->
				<Border
					Background="#fff7ed"
					BorderBrush="#e0e0e0"
					BorderThickness="1"
					CornerRadius="20"
					Margin="8,8,0,8"
					Padding="0"
					Height="150">
					<Border
						Background="#faf5ff"
						BorderBrush="#ad46ff"
						BorderThickness="4,0,0,0"
						CornerRadius="20">
						<StackPanel Margin="24">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" Text="Pending Request" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
								<svg:SvgViewbox Source="/Assets/Images/indicator.svg" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
							</Grid>
							<TextBlock Text="₹12,450" FontWeight="Bold" FontSize="26" Margin="0,16,0,0" Foreground="#8200db"/>
							<TextBlock Text="Per order average" FontSize="12" Foreground="#ad46ff" Margin="0,8,0,0" />
						</StackPanel>
					</Border>
				</Border>
			</UniformGrid>

			<!-- Two info panels side-by-side -->
			<Grid Margin="0,0,0,18">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,8,8,8">
					<StackPanel>
						<TextBlock Text="Delivery Information" FontSize="16" Margin="0,0,0,18"/>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="140" />
							</Grid.ColumnDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="Delivery TAT (mins)" Foreground="#333" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="0" Grid.Column="1" Text="35 mins" Foreground="#FF6A00" HorizontalAlignment="Right" FontWeight="SemiBold" Margin="0,8" FontSize="16"/>

							<TextBlock Grid.Row="1" Grid.Column="0" Text="Average time taken from order pickup to delivery"  Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="1" Grid.Column="1" Text="" HorizontalAlignment="Right" Margin="0,8"/>

							<TextBlock Grid.Row="2" Grid.Column="0" Text="Customer Returns" Foreground="#333" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="2" Grid.Column="1" Text="2 items" Foreground="#E33A3A" HorizontalAlignment="Right" FontWeight="SemiBold" Margin="0,8" FontSize="16"/>

							<TextBlock Grid.Row="3" Grid.Column="0" Text="Number of return/rejected items after delivery" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="3" Grid.Column="1" Text="" HorizontalAlignment="Right" Margin="0,8"/>
						</Grid>
					</StackPanel>
				</Border>

				<Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,8,0,8">
					<StackPanel>
						<TextBlock Text="Payment Breakdown" FontSize="16" Margin="0,0,0,18"/>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="130" />
							</Grid.ColumnDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="Cash Payments" Foreground="#333" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="0" Grid.Column="1" Text="₹7,850" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,8" FontSize="16"/>

							<TextBlock Grid.Row="1" Grid.Column="0" Text="Digital Payments" Foreground="#333" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="1" Grid.Column="1" Text="₹4,600" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,8" FontSize="16"/>

							<TextBlock Grid.Row="2" Grid.Column="0" Text="Cash Percentage" Foreground="#333" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="2" Grid.Column="1" Text="63%" Foreground="#FF6A00" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,8" FontSize="16"/>
 
							<TextBlock Grid.Row="3" Grid.Column="0" Text="Digital Percentage" Foreground="#333" Margin="0,8" FontSize="16"/>
							<TextBlock Grid.Row="3" Grid.Column="1" Text="37%" Foreground="#0A7F3A" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,8" FontSize="16"/>
						</Grid>
					</StackPanel>
				</Border>
			</Grid>

			<!-- Hourly performance -->
			<Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
				<StackPanel>
					<TextBlock Text="Hourly Performance Today" FontSize="16" Margin="6,0,0,12"/>
					<UniformGrid Columns="8" HorizontalAlignment="Stretch">
						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="9-10 AM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="3" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹450" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="10-11 AM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="5" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹750" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="11-12 PM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="8" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹1200" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="12-1 PM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="12" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹1850" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="1-2 PM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="6" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹900" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="2-3 PM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="4" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹600" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="3-4 PM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="4" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹600" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>

						<Border Style="{StaticResource TileStyle}" Width="Auto" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="4-5 PM" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
								<TextBlock Text="4" Foreground="#1E6EEA" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,6"/>
								<TextBlock Text="₹600" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
							</StackPanel>
						</Border>
					</UniformGrid>
				</StackPanel>
			</Border>
			
			<!--Daily Summary-->
			<Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
				<StackPanel>
					<TextBlock Text="Daily Summary" FontSize="16" Margin="6,0,0,12"/>
					<UniformGrid HorizontalAlignment="Stretch">
						<Border Style="{StaticResource BigTileStyle}" HorizontalAlignment="Stretch">
							<StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
								<TextBlock Text="Today's Highlights:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left"/>
								<StackPanel Margin="8,12,0,0">
									<!-- bullet rows using BulletDecorator for good alignment -->
									<BulletDecorator Margin="0,6,0,0">
										<BulletDecorator.Bullet>
											<Ellipse Width="4" Height="4" Fill="#000000" VerticalAlignment="Center"/>
										</BulletDecorator.Bullet>
										<TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#1b2b33" Margin="8,0,0,0">
											Peak hour was 12-1 PM with 12 orders (₹1,850)
										</TextBlock>
									</BulletDecorator>

									<BulletDecorator Margin="0,6,0,0">
										<BulletDecorator.Bullet>
											<Ellipse Width="4" Height="4" Fill="#000000" VerticalAlignment="Center"/>
										</BulletDecorator.Bullet>
										<TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#1b2b33" Margin="8,0,0,0">
											Digital payments increased by 15% compared to yesterday
										</TextBlock>
									</BulletDecorator>

									<BulletDecorator Margin="0,6,0,0">
										<BulletDecorator.Bullet>
											<Ellipse Width="4" Height="4" Fill="#000000" VerticalAlignment="Center"/>
										</BulletDecorator.Bullet>
										<TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#1b2b33" Margin="8,0,0,0">
											Average delivery time improved by 5 minutes
										</TextBlock>
									</BulletDecorator>

									<BulletDecorator Margin="0,6,0,0">
										<BulletDecorator.Bullet>
											<Ellipse Width="4" Height="4" Fill="#000000" VerticalAlignment="Center"/>
										</BulletDecorator.Bullet>
										<TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#1b2b33" Margin="8,0,0,0">
											Customer satisfaction rating: 4.2/5 (↑0.1 from yesterday)
										</TextBlock>
									</BulletDecorator>

									<BulletDecorator Margin="0,6,0,0">
										<BulletDecorator.Bullet>
											<Ellipse Width="4" Height="4" Fill="#000000" VerticalAlignment="Center"/>
										</BulletDecorator.Bullet>
										<TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#1b2b33" Margin="8,0,0,0">
											Total distance covered by riders: 128 km
										</TextBlock>
									</BulletDecorator>
								</StackPanel>

							</StackPanel>
						</Border>
					</UniformGrid>
				</StackPanel>
			</Border>
		</StackPanel>

</UserControl>
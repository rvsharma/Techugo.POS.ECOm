				<Border Style="{StaticResource CardStyle}" Margin="0,8,8,8">
                <Grid Background="White">
                    <StackPanel Margin="20">
                        <TextBlock Text="WEEKLY COMPARISON" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

                        <Grid>
                            <!-- Background band for base ceiling -->
                            <lvc:CartesianChart Series="{Binding SeriesCollection}" Height="300">
                                <lvc:CartesianChart.DataTooltip>
                                    <lvc:DefaultTooltip SelectionMode="OnlySender"
                            Background="Black"
                            Foreground="White"
                            FontSize="14"/>
                                </lvc:CartesianChart.DataTooltip>

                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="" Labels="{Binding Days}" FontSize="14" Foreground="#222"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="" MinValue="0" MaxValue="{Binding MaxY}" FontSize="14" Foreground="#222"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>


                        </Grid>
                    </StackPanel>
                </Grid>

            </Border>


			</Grid>


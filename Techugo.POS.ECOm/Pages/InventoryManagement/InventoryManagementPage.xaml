<UserControl x:Class="Techugo.POS.ECOm.Pages.InventoryManagementPage"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Techugo.POS.ECOm.Converters"
    Height="Auto" Width="Auto">
    <UserControl.Resources>
        <conv:ActiveStateConverter x:Key="ActiveStateConverter"/>
        <conv:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter" />
        <conv:StatusToForegroundConverter x:Key="StatusToForegroundConverter" />

        <!-- Reusable card style so all cards are identical in shape/size -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E6E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.03" BlurRadius="8" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search box style -->
        <Style x:Key="SearchBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Filter pill style (rounded pill with border) -->
        <Style x:Key="FilterPillBorder" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="beige"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Products ListView header style -->
        <Style x:Key="GridHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ListViewScrollTemplate" TargetType="ListView">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}">
                            <ScrollViewer
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        PanningMode="VerticalFirst"
                        CanContentScroll="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>


        <StackPanel Margin="32">
            <TextBlock Text="Inventory Management" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Manage product catalog, pricing, and stock status" FontSize="14" Foreground="#888" Margin="0,4,0,24"/>

            <!-- Stats row -->
            <Grid Margin="0,0,0,24" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <!--<ColumnDefinition Width="*" />-->
                </Grid.ColumnDefinitions>

                <!-- Total Products -->
                <Border Style="{StaticResource StatCardStyle}" Grid.Column="0" Margin="0,8,8,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Total Products" FontSize="14" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding TotalItems}" FontSize="26" FontWeight="SemiBold" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Products -->
                <Border Style="{StaticResource StatCardStyle}" Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Active Products" FontSize="14" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding ActiveProducts}" FontSize="26" FontWeight="SemiBold"  Foreground="#16A34A"/>
                        </StackPanel>

                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border Background="#DCFCE7" CornerRadius="16" Padding="10,6" HorizontalAlignment="Right">
                                <TextBlock Text="Active" Foreground="#16A34A" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Inactive Products -->
                <!--<Border Style="{StaticResource StatCardStyle}" Grid.Column="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Inactive Products" FontSize="14" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding InactiveProducts}" FontSize="26" FontWeight="SemiBold"  Foreground="#374151"/>
                        </StackPanel>

                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border Background="#F3F4F6" CornerRadius="16" Padding="10,6" HorizontalAlignment="Right">
                                <TextBlock Text="Inactive" Foreground="#374151" FontSize="12"  FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>-->

                <!-- Out of Stock -->
                <Border Style="{StaticResource StatCardStyle}" Grid.Column="2" Margin="8,8,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Out of Stock" FontSize="14" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding OutOfStock}" FontSize="26" FontWeight="SemiBold"  Foreground="#DC2626"/>
                        </StackPanel>

                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border Background="#FEE2E2" CornerRadius="16" Padding="10,6" HorizontalAlignment="Right">
                                <TextBlock Text="Out of Stock" Foreground="#DC2626" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>


            <!-- Search + Filter row -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Search box -->
                <Border Style="{StaticResource SearchBoxStyle}" Grid.Column="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- magnifier icon (simple Path) -->
                    <svg:SvgViewbox Source="/Assets/Images/search.svg"  Grid.Column="0" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>


                        <!-- TextBox with overlay placeholder -->
                        <Grid Grid.Column="1" VerticalAlignment="Center">
                            <TextBox x:Name="SearchBox"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     Foreground="#111827"
                                     VerticalContentAlignment="Center"
                                     Padding="6,0"/>
                            <TextBlock Text="Search by product name, barcode, or category..."
                                       FontSize="14"
                                       Foreground="#9CA3AF"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Filter pill: rounded, icon on left and ComboBox content on right -->
                <Border Grid.Column="1" Style="{StaticResource FilterPillBorder}" Margin="12,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="49"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- filter icon -->
                        <Viewbox Grid.Column="0" Width="18" Height="20" VerticalAlignment="Center"   HorizontalAlignment="Center" >
                            <Canvas Width="12" Height="10"  >
                                <Path Data="M3,3 L13,3 L9,8 L9,13 L7,13 L7,8 Z" Fill="gray" Stretch="Uniform" />
                            </Canvas>
                        </Viewbox>

                        <!-- ComboBox with transparent background so pill shows rounded corners -->
                        <ComboBox Grid.Column="1"
                                  x:Name="BrandFilterCombo"
                                  Background="#F3F4F6"
                                  BorderThickness="0"
                                  Padding="6,0"
                                  VerticalContentAlignment="Center"
                                  HorizontalContentAlignment="Left"
                                  Foreground="#111827"
                                  SelectedIndex="0">
                            <ComboBoxItem IsSelected="True">All Brands</ComboBoxItem>
                            <ComboBoxItem>Mother Dairy</ComboBoxItem>
                            <ComboBoxItem>Safal</ComboBoxItem>
                            <ComboBoxItem>Dhara</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- Products Inventory Card (table) -->
            <Border Background="White" BorderBrush="#E6E7EB" BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,0,0,24">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                        <svg:SvgViewbox Source="/Assets/Images/orders.svg" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding TotalItemText}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Products ListView -->
                <ListView x:Name="ProductsListView"
                      ItemsSource="{Binding inventoryData}"
                      SelectionMode="Single"
                      BorderThickness="0"
                      Margin="0"
                      Style="{StaticResource ListViewScrollTemplate}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>


                    <!-- row style -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#0a0a0a"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="MinHeight" Value="80"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="BorderThickness" Value="0,1,0,0" />
                            <Setter Property="BorderBrush" Value="#dcdcdc" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd"
Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
Padding="{TemplateBinding Padding}">
                                            <GridViewRowPresenter Content="{TemplateBinding Content}"
                Columns="{Binding Path=View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}"
                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#ececf0"/>
                                            </Trigger>

                                            <!-- Selected + active -->
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#ececf0"/>
                                                <Setter Property="Foreground" Value="#0a0a0a"/>
                                            </MultiTrigger>

                                            <!-- Selected + inactive -->
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#ececf0"/>
                                                <Setter Property="Foreground" Value="#0a0a0a"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.View>
                            <GridView>
                                <!-- Product Image -->
                                <GridViewColumn Header="Product Image" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Width="64" Height="64" HorizontalAlignment="Left">
                                                <!-- Background visible when image is missing -->
                                                <Border Background="#F5F5F5" CornerRadius="8"/>
                                                <!-- Rounded image using Rectangle + ImageBrush to get clipped corners -->
                                                <Rectangle Width="64" Height="64" RadiusX="8" RadiusY="8" SnapsToDevicePixels="True">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="{Binding ImagePath}" Stretch="UniformToFill" />
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Barcode -->

                                <GridViewColumn Header="Barcode" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <svg:SvgViewbox Source="/Assets/Images/barcode.svg" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Barcode}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Product Details -->
                                <GridViewColumn Header="Product Details" Width="280">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding ItemName}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="Short Description" Foreground="#6B7280" FontSize="12" TextWrapping="Wrap" MaxWidth="300"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Brand -->
                                
                                    <GridViewColumn Header="Brand" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                            <Border Background="#ffffff" BorderBrush="#e1e2e2" BorderThickness="1" CornerRadius="8" Padding="6,2" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Brand}" HorizontalAlignment="Center" FontSize="12" FontWeight="DemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                <!-- Category -->
                                <GridViewColumn Header="Category" Width="130">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Category, Converter={StaticResource StatusToBackgroundConverter}}"
CornerRadius="8" Padding="8,4" HorizontalAlignment="Left" Margin="0,6,0,6">
                                                <TextBlock Text="{Binding Category}" 
       Foreground="{Binding Category, Converter={StaticResource StatusToForegroundConverter}}"
       FontWeight="SemiBold" FontSize="12" />
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <!--<GridViewColumn Header="Category" Width="130" DisplayMemberBinding="{Binding Category}" />-->

                                <!-- Selling Price -->
                                <GridViewColumn Header="Selling Price" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SPrice, StringFormat=₹{0:F2}}" HorizontalAlignment="Left" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- MRP -->
                                <GridViewColumn Header="MRP" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding MRP, StringFormat=₹{0:F2}}" HorizontalAlignment="Left" Foreground="#6B7280" TextDecorations="Strikethrough"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Active / Inactive -->
                                <GridViewColumn Header="Active/Inactive" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <!-- Toggle styled as iOS-like switch -->
                                                <!-- inside the ToggleButton element -->
                                                <ToggleButton x:Name="SwitchToggle"
                                                  Width="44" Height="24"
                                                  Margin="0,0,6,0"
                                                  IsChecked="{Binding IsActive, Mode=TwoWay, Converter={StaticResource ActiveStateConverter}}"
                                                  Focusable="False"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  PreviewMouseLeftButtonDown="SwitchToggle_PreviewMouseLeftButtonDown"
                                                  PreviewKeyDown="SwitchToggle_PreviewKeyDown"
                                                  Checked="SwitchToggle_Checked"
                                                  Unchecked="SwitchToggle_Unchecked">
                                                    <ToggleButton.Template>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                                <!-- Track -->
                                                                <Border x:Name="Track"
                                                                CornerRadius="12"
                                                                Background="#cbced4"
                                                                Opacity="1"/>
                                                                                        <!-- Thumb -->
                                                                                        <Ellipse x:Name="Thumb"
                                                                 Width="18" Height="18"
                                                                 Fill="White"
                                                                 Margin="3,3,0,3"
                                                                 HorizontalAlignment="Left"/>
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="true">
                                                                    <Setter TargetName="Track" Property="Background" Value="#374151"/>
                                                                    <!-- green when active -->
                                                                    <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="Track" Property="Background" Value="#cbced4"/>
                                                                    <Setter TargetName="Track" Property="Opacity" Value="0.4"/>
                                                                    <Setter TargetName="Thumb" Property="Opacity" Value="0.6"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </ToggleButton.Template>
                                                </ToggleButton>

                                                <!-- Text label that updates based on toggle state -->
                                                <TextBlock x:Name="StatusText" VerticalAlignment="Center" FontSize="14" Foreground="#374151" FontWeight="SemiBold" Text="Inactive"/>

                                            </StackPanel>

                                            <!-- Use DataTriggers based on the ToggleButton's IsChecked to update text/color -->
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, ElementName=SwitchToggle}" Value="True">
                                                    <Setter TargetName="StatusText" Property="Text" Value="Active"/>

                                                    <Setter TargetName="StatusText" Property="Foreground" Value="#374151"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsChecked, ElementName=SwitchToggle}" Value="False">
                                                    <Setter TargetName="StatusText" Property="Text" Value="Inactive"/>
                                                    <Setter TargetName="StatusText" Property="Foreground" Value="#cbced4"/>

                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>

                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="GridViewColumnHeader">
                                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>

</UserControl>
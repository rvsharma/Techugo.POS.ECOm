<UserControl x:Class="Techugo.POS.ECOm.Pages.PickListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto" Background="WhiteSmoke">
    <StackPanel Margin="32" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Back to Dashboard"
                    Grid.Column="0"
                    Height="34"
                    Padding="12,4"
                    Click="BackButton_Click"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="SemiBold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                         Background="white"
                         BorderBrush="white"
                         BorderThickness="1"
                          CornerRadius="8"
                          Padding="10"
                          SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <StackPanel Grid.Column="1" Margin="24,0,0,0" >
                <TextBlock Text="Pick List Orders" FontSize="24" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBlock Text="Item-wise picking with real-time weighing integration" FontSize="14" Foreground="#888"/>
            </StackPanel>
        </Grid>

        <!-- Weighing Scale Section -->
        <Border Background="#F0F8FF" BorderThickness="1" BorderBrush="#ADD8E6" CornerRadius="8" Padding="18" Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Weighing Scale Info -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE998;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Digital Weighing Scale" FontWeight="SemiBold" Foreground ="DarkBlue" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Real-time weight: 0.00 kg" FontSize="14" Foreground="#2196F3" Margin="24,4,0,0"/>
                </StackPanel>

                <!-- Simulate Weight Button -->
                <Button Content="Simulate Weight" Grid.Column="0"  Padding="12,4" FontSize="14" Background="#FFF" BorderBrush ="White" BorderThickness="1" Foreground ="Black" FontWeight="SemiBold" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                             Background="white"
                             BorderBrush="LightGray"           
                             BorderThickness="1"
                             CornerRadius="8"
                              Padding="10"
                             SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="LightGray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>
        </Border>

        <Border Background="White" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="8" Padding="18" Margin="0,24,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,10,10,20">
                    <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Pick List Orders " FontSize="16" FontWeight="DemiBold" VerticalAlignment="Center" Foreground="#222"/>
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table -->
                    <DataGrid Grid.Row="3"
                      AutoGenerateColumns="False"
                       HeadersVisibility="Column"
                      CanUserAddRows="False"
                        Margin="15"
                         FontSize="14" 
                        FontWeight="SemiBold"
                        BorderBrush="white"
               
                          GridLinesVisibility="None"
                          BorderThickness="0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="white"/>
                                <Setter Property="BorderBrush" Value="white"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Style.Triggers>
                                    <!-- Hover effect -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order Details" Binding="{Binding Item1}" Width="*"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Item2}" Width="*"/>
                            <DataGridTextColumn Header="Total Items" Binding="{Binding Item3}" Width="*"/>
                            <DataGridTextColumn Header="Order Value" Binding="{Binding Item4}" Width="*"/>
                            <DataGridTextColumn Header="Actions" Binding="{Binding Item5}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
               
                <StackPanel Grid.Row="1" Background="White">

                    <!-- Row with Expand Details -->
 

                        <!-- Main Table Row (Expander.Header) -->
                        
                            <Grid Background="#FCFCFC" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Column="0">

                           
                                <ToggleButton x:Name="ArrowToggle" FontSize="14" Background="Transparent" BorderThickness="0" Cursor="Arrow" VerticalAlignment="Center" Padding="0" Width="20">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Content" Value=">"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content" Value="˅"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                <TextBlock Text="ORD-001" FontSize="14"/>
                                </StackPanel>

                                <TextBlock Text="Rahul Sharma" Grid.Column="1" FontSize="14"/>

                                <Border Background="#F2F3F5" CornerRadius="8" Padding="5,2"
                        Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="2 items" FontSize="14"/>
                                </Border>

                                <TextBlock Text="₹790.00" FontWeight="Bold" Grid.Column="3" FontSize="14"/>

                                <!-- Expand/Collapse Label -->


                        <ToggleButton x:Name="ExpandToggle" Grid.Column="4" FontSize="14" Foreground="Black" Background="Transparent" BorderThickness="0" Cursor="Arrow">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton" >
                                    <Setter Property="Content" Value="Expand Details"/>
                                   
                                    <Style.Triggers>
                                       
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Content" Value="Collapse Details"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                    </Grid>
                    <StackPanel x:Name="DetailsPanel" Background="White" >
                        
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- Show if either toggle is checked -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsChecked, ElementName=ExpandToggle}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsChecked, ElementName=ArrowToggle}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- Collapsible Child Table -->
                        <StackPanel Background="White" >
                            <Grid Background="#f9f9f9" Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Item Name"  Grid.Column="0" Margin="5"/>
                                <TextBlock Text="Size" Grid.Column="1" Margin="5"/>
                                <TextBlock Text="Qty"  Grid.Column="2" Margin="5"/>
                                <TextBlock Text="Edit Qty"  Grid.Column="3" Margin="5"/>
                                <TextBlock Text="Weight"  Grid.Column="4" Margin="5"/>

                                <TextBlock Text="Rate"  Grid.Column="5" Margin="5"/>
                                <TextBlock Text="Total" Grid.Column="6" Margin="5"/>
                            </Grid>

                            <!-- Example Row -->
                            <Grid Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Cooking Oil - Sunflower" FontWeight="Bold" Grid.Column="0" Margin="5"/>
                                <Border   BorderBrush="gray"
                                 BorderThickness="1" CornerRadius="5" Padding="3,2"
                              Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="50kg" Grid.Column="1" FontSize ="10" FontWeight="Bold" Margin="3"/>
                                </Border>
                                <TextBlock Text="2" Grid.Column="2" FontWeight="Bold" Margin="5"/>
                                <Border Background="LightGreen"  CornerRadius="5" Padding="5,2"
                            Grid.Column="3" HorizontalAlignment="Center">
                                    <TextBlock Text="2" Grid.Column="3" FontWeight="Bold" Margin="5"/>
                                </Border>
                                <TextBlock Text="1.80" Grid.Column="4" FontWeight="Bold" Margin="5"/>
                                <TextBlock Text="₹170" Grid.Column="5" FontWeight="Bold" Margin="5"/>
                                <TextBlock Text="₹340.00" Grid.Column="6" FontWeight="Bold" Margin="5"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
                



            </StackPanel>
           
        </Border>
    </StackPanel>
</UserControl>

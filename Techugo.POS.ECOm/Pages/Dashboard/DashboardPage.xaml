<UserControl x:Class="Techugo.POS.ECOm.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <StackPanel Margin="32,32,32,32">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Title on the left -->
            <TextBlock Text="Order Dashboard" FontWeight="Bold" FontSize="24" VerticalAlignment="Center" Grid.Column="0"/>
            <!-- Status and refresh on the right -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,4,0"/>
                    <TextBlock Text="Last updated: 12:17:27 PM" FontSize="14" Foreground="#444"/>
                </StackPanel>
                <Button Margin="16,0,0,0" Padding="16,4" FontWeight="SemiBold" Background="#FFF" BorderBrush="#222" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <TextBlock Text="Real-time order status overview" FontSize="14" Foreground="#444" Margin="0,4,0,16"/>

        <!-- Alerts -->
        <StackPanel>
            <Border Background="#FFF7F0" BorderBrush="#FFD6B3" BorderThickness="1" CornerRadius="8" Margin="0,0,0,8" Padding="12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#F44336" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="5 orders waiting in Previous Day Carry-Forward" Foreground="#F44336" FontSize="13"/>
                </StackPanel>
            </Border>
            <Border Background="#F4F9FF" BorderBrush="#B3D6FF" BorderThickness="1" CornerRadius="8" Margin="0,0,0,16" Padding="12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Peak hour: 25% more orders than usual" Foreground="#2196F3" FontSize="13"/>
                </StackPanel>
            </Border>
        </StackPanel>
        <UniformGrid Columns="4" Rows="2" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <!-- Total Orders -->
            <Border
                Background="#f3f8ff"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="TotalOrders_Click"
                TouchUp="TotalOrders_Click">
                <Border
                    Background="#f3f8ff"
                    BorderBrush="#2b7fff"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total Orders" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="6" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="5 processed, 1 pending" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Pick List -->
            <Border
                Background="#fefce8"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="PickList_Click"
                TouchUp="PickList_Click">
                <Border
                    Background="#fefce8"
                    BorderBrush="#f0b100"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Pick List" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="0" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="Orders ready for picking" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Assign Rider -->
            <Border
                Background="#faf5ff"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="AssignRider_Click"
                TouchUp="AssignRider_Click">
                <Border
                    Background="#faf5ff"
                    BorderBrush="#ad46ff"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Assign Rider" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="Black"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="0" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="Ready for rider assignment" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Pending Delivery -->
            <Border
                Background="#fff7ed"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="PendingDelivery_Click"
                TouchUp="PendingDelivery_Click">
                <Border
                    Background="#fff7ed"
                    BorderBrush="#ff6900"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Pending Delivery" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="1" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="Orders in transit" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Delivered -->
            <Border
                Background="#f0fdf4"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="Delivered_Click"
                TouchUp="Delivered_Click">
                <Border
                    Background="#f0fdf4"
                    BorderBrush="#00c951"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Delivered" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE001;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="3" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="Successfully delivered" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Rejected -->
            <Border
                Background="#fef2f2"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="Rejected_Click"
                TouchUp="Rejected_Click">
                <Border
                    Background="#fef2f2"
                    BorderBrush="#fb2c36"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rejected" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="0" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="Cancelled or failed delivery" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Partial Returns -->
            <Border
                Background="#eef2ff"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="PartialReturns_Click"
                TouchUp="PartialReturns_Click">
                <Border
                    Background="#eef2ff"
                    BorderBrush="#615fff"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Partial Returns" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="2" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="450 refund amound" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Previous Day Carry-Forward -->
            <Border
                Background="#fff7ed"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="20"
                Margin="8"
                Padding="0"
                MouseLeftButtonUp="CarryForward_Click"
                TouchUp="CarryForward_Click">
                <Border
                    Background="#fff7ed"
                    BorderBrush="#ff6900"
                    BorderThickness="6,0,0,0"
                    CornerRadius="20">
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Previous Day Carry- &#x0a;Forward" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#297EFF"
                                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        </Grid>
                        <TextBlock Text="0" FontWeight="Bold" FontSize="26" Margin="0,16,0,0"/>
                        <TextBlock Text="Orders received after 9PM &#x0a; cutoff" FontSize="12" Foreground="#888" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
            <!-- Repeat for other tiles, each with its own Click handler -->
        </UniformGrid>
    </StackPanel>
</UserControl>
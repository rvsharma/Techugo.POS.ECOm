<UserControl x:Class="Techugo.POS.ECOm.Pages.Dashboard.AssignRiderPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Techugo.POS.ECOm.Pages.Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Assign Rider Pop-Up Content Goes Here" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="16" 
                       FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" >
            <!-- Add your pop-up content here -->
            <Button x:Name="Cancel" Content="Cancel" 
                Width="80" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,10,10,0"
                Click="Cancel_Click"/>
            <Button x:Name="Assign" Content="Assign Rider" 
        Width="80" 
        Height="30" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Top" 
        Margin="0,10,10,0"
        Click="AssignRider_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

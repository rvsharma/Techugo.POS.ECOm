<UserControl x:Class="Techugo.POS.ECOm.Pages.Dashboard.PendingRequest.RejectOrderPopUp"
             xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:convertors="clr-namespace:Techugo.POS.ECOm.Convertors"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="450"
             Background="Transparent">
    <UserControl.Resources>
        <convertors:OnlineStatusConverter x:Key="OnlineStatusConverter"/>
        <convertors:OnlineStatusColorConverter x:Key="OnlineStatusColorConverter"/>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Overlay -->
        <Rectangle Fill="#AA888888" Opacity="0.6" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        <!-- Centered Popup -->
        <Border Background="White"
            CornerRadius="16"
            Padding="32"
            BorderBrush="#FF868686"
            BorderThickness="0.5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="500"
            Height="Auto">
            <Border.Effect>
                <DropShadowEffect Color="#888" BlurRadius="16" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <!-- Close Button -->
                <Button Content="✕"
                        Width="32"
                        Height="32"
                        
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="18"
                        Foreground="#888"
                        Click="Cancel_Click"/>
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="Reject Order"
                               FontSize="18"
                               FontWeight="DemiBold"
                               Foreground="#222"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding SelectReasonText}"
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,24"/>
                    <TextBlock Text="Rejection Reason"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#222"
                               Margin="0,0,0,0"/>
                    <ComboBox x:Name="RiderComboBox"
                              ItemsSource="{Binding RiderList}"
                              SelectedValuePath="RiderID"
                              SelectedValue="{Binding SelectedRiderId, Mode=TwoWay}"
                              SelectionChanged="RiderComboBox_SelectionChanged"
                              FontSize="16"
                              Height="36"
                              Margin="0,8,0,0"
                              Padding="12,0"
                              Background="{DynamicResource MaterialDesignPaper}"
                              BorderBrush="{DynamicResource MaterialDesignDivider}"
                              materialDesign:HintAssist.Hint="Select a rider">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding IsOnline, Converter={StaticResource OnlineStatusConverter}}" 
                           Foreground="{Binding IsOnline, Converter={StaticResource OnlineStatusColorConverter}}"
                           FontWeight="Regular" FontSize="12"
                           Margin="0,4,8,0"/>

                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Height" Value="40"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Foreground" Value="#888"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Height="36" Width="Auto" Click="Cancel_Click" Foreground="White"  FontWeight="SemiBold" Margin="0,0,6,0" Style="{StaticResource RoundedWhiteButtonStyle}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Cancel" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button Height="36" Width="Auto" Click="ConfirmReject_Click" Foreground="White"  FontWeight="SemiBold" Margin="0,0,6,0" Style="{StaticResource RoundedRedButtonStyle}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <svg:SvgViewbox Source="/Assets/Images/circle_cross.svg" Width="14" Height="14" Margin="8" VerticalAlignment="Center"/>
                                        <TextBlock Text="Confirm Reject" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button Content="Cancel"
                                Width="Auto"
                                Height="36"
                                Padding="16,0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Background="#F5F5F7"
                                Foreground="#222"
                                BorderBrush="#F5F5F7"
                                BorderThickness="2"
                                Margin="0,0,16,0"
                                Click="Cancel_Click"/>
                        ConfirmReject_Click Content="Assign Rider"
                            x:Name="AssignRiderButton"
                            Width="Auto"
                            Height="36"
                            Padding="16,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Click="AssignRider_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Setter Property="Background" Value="#8B8B96"/>
                                    <Setter Property="BorderBrush" Value="#8B8B96"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Style.Triggers>
                                        <!-- disable button when no rider selected (SelectedRiderId == 0) -->
                                        <DataTrigger Binding="{Binding SelectedRiderId}" Value="0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#E5E7EB"/>
                                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                            <Setter Property="Foreground" Value="#9CA3AF"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="Techugo.POS.ECOm.Pages.Dashboard.OrderDetailsPopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="220" d:DesignWidth="400"
    Background="Transparent" ClipToBounds="False">
    <Border Background="White"
        CornerRadius="12"
        Padding="18"
        BorderBrush="#FF868686"
        BorderThickness=".3">
        <Border.Effect>
            <DropShadowEffect Color="#33000000" BlurRadius="40" ShadowDepth="2" Opacity="0.45"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="{Binding OrderNo}" FontWeight="Medium" FontSize="14" Foreground="#111111" Margin="50,0,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="50,8,0,0">
                    <TextBlock Text="Order Items" Foreground="#6B6B6B" FontSize="15" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Customer.CustomerName}" FontSize="14" Foreground="#111111" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="50,8,0,0">
                    <TextBlock Text="Customer Name :" FontWeight="Medium" Foreground="#6B6B6B" FontSize="15" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Customer.CustomerName}" FontSize="14" Foreground="#111111" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="50,4,0,0">
                    <TextBlock Text="Delivery Address :" FontWeight="Medium" FontSize="14" Foreground="#6B6B6B"/>
                    <TextBlock Text="{Binding Address}" FontSize="12" Foreground="#6B6B6B" Margin="6,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="50,4,0,0">
                    <TextBlock Text="Time Slot :" FontWeight="Medium" Foreground="#6B6B6B" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding BranchDeliverySlot}" FontSize="12" Foreground="#6B6B6B" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="50,4,0,0">
                    <TextBlock Text="Total Amount :" FontWeight="Medium" Foreground="#6B6B6B" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalAmount}" FontSize="12" Foreground="#6B6B6B" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,18,0,0">
                <!-- Accept Order Button with rounded corners at bottom -->
                <Border CornerRadius="6" Background="#00a63e" Margin="0,0,12,0" BorderBrush="#00a63e" Height="32" BorderThickness="1" VerticalAlignment="Bottom">
                    <Button Background="Transparent" Foreground="White" FontWeight="SemiBold" FontSize="12" Padding="18,2" BorderThickness="0" Click="Close_Click" Height="32">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" Margin="12,0">
                            <TextBlock Text="Close"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="Techugo.POS.ECOm.Pages.Dashboard.OrderDetailsPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Overlay -->
        <Rectangle Fill="#AA888888" Opacity="0.6" 
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"/>
        <!-- Centered Popup -->
        <Border Background="White"
                CornerRadius="16"
                Padding="32"
                BorderBrush="#FF868686"
                BorderThickness="0.5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="Auto">
            <Border.Effect>
                <DropShadowEffect Color="#888" BlurRadius="16" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <!-- Close Button -->
                <Button Content="✕"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="18"
                        Foreground="#888"
                        Click="Close_Click"
                        Style="{StaticResource RoundedWhiteButtonStyle}"/>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Order Details"
                               FontSize="18"
                               FontWeight="DemiBold"
                               Foreground="#222"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Complete information about the selected order including customer details, items, and payment information."
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Order ID" FontWeight="DemiBold" FontSize="14" Foreground="#6a7282"/>
                            <TextBlock Text="{Binding OrderNo}" FontSize="16" Foreground="#222"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="Status" FontWeight="DemiBold" FontSize="14" Foreground="#6a7282"/>
                            <Border Background="#C6F6D5" CornerRadius="8" Padding="12,2" HorizontalAlignment="Left" Margin="0,4,0,0">
                                <TextBlock Text="{Binding Status}" Foreground="#228B22" FontWeight="SemiBold" FontSize="14"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="Customer Information" FontWeight="DemiBold" FontSize="16" Foreground="#222" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Name" FontSize="13" Foreground="#6a7282"/>
                            <TextBlock Text="{Binding Customer.CustomerName}" FontSize="15" Foreground="#222"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Contact" FontSize="13" Foreground="#6a7282"/>
                            <TextBlock Text="{Binding Customer.MobileNo}" FontSize="15" Foreground="#222"/>
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="Delivery Address" FontSize="13" Foreground="#6a7282"/>
                    <TextBlock Text="{Binding Address}" FontSize="15" Foreground="#222" Margin="0,0,0,16" TextWrapping="Wrap"/>
                    <TextBlock Text="Order Items" FontWeight="DemiBold" FontSize="16" Foreground="#222" Margin="0,0,0,8"/>
                    <Grid Margin="0,4,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Item Name" FontWeight="SemiBold" FontSize="14" Foreground="#6a7282" Grid.Column="0"/>
                        <TextBlock Text="Quantity" FontWeight="SemiBold" FontSize="14" Foreground="#6a7282" Grid.Column="1"/>
                        <TextBlock Text="Price" FontWeight="SemiBold" FontSize="14" Foreground="#6a7282" Grid.Column="2"/>
                        <TextBlock Text="Total" FontWeight="SemiBold" FontSize="14" Foreground="#6a7282" Grid.Column="3"/>
                    </Grid>
                    <ItemsControl ItemsSource="{Binding OrderDetails}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Item.ItemName}" FontSize="15" Foreground="#222" Grid.Column="0"/>
                                    <TextBlock Text="{Binding Quantity}" FontSize="15" Foreground="#222" Grid.Column="1"/>
                                    <TextBlock Text="{Binding Amount, StringFormat=₹{0}}" FontSize="15" Foreground="#222" Grid.Column="2"/>
                                    <TextBlock Text="{Binding NetAmount, StringFormat=₹{0}}" FontSize="15" Foreground="#222" Grid.Column="3"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Separator Margin="0,16,0,8" Background="#E0E0E0"/>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Payment Mode" FontSize="13" Foreground="#6a7282"/>
                            <TextBlock Text="{Binding PaymentMode}" FontSize="15" Foreground="#222" FontWeight="DemiBold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Scheduled Delivery" FontSize="13" Foreground="#6a7282"/>
                            <TextBlock Text="{Binding ExpectedDeliveryDate, StringFormat={}{0:yyyy-MM-dd, hh:mm tt}}" FontSize="15" FontWeight="DemiBold" Foreground="#222"/>
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="Total Amount" FontSize="13" Foreground="#6a7282"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat=₹{0}}" FontSize="22" FontWeight="Bold" Foreground="#00A63E" Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="Techugo.POS.ECOm.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <StackPanel Margin="32,32,32,32">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Order Dashboard" FontWeight="Bold" FontSize="28"/>
            <StackPanel Orientation="Horizontal" Margin="32,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,4,0"/>
                <TextBlock Text="Last updated: 12:17:27 PM" FontSize="14" Foreground="#888"/>
            </StackPanel>
            <Button Content="Refresh" Margin="16,0,0,0" Padding="16,4" FontWeight="SemiBold" Background="#FFF" BorderBrush="#222" BorderThickness="1" />
        </StackPanel>
        <TextBlock Text="Real-time order status overview" FontSize="16" Foreground="#888" Margin="0,4,0,16"/>

        <!-- Alerts -->
        <StackPanel>
            <Border Background="#FFF7F0" BorderBrush="#FFD6B3" BorderThickness="1" CornerRadius="8" Margin="0,0,0,8" Padding="12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#F44336" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="5 orders waiting in Previous Day Carry-Forward" Foreground="#F44336" FontSize="15"/>
                </StackPanel>
            </Border>
            <Border Background="#F4F9FF" BorderBrush="#B3D6FF" BorderThickness="1" CornerRadius="8" Margin="0,0,0,16" Padding="12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Peak hour: 25% more orders than usual" Foreground="#2196F3" FontSize="15"/>
                </StackPanel>
            </Border>
        </StackPanel>
        <UniformGrid Columns="4" Rows="2" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <!-- Example for Total Orders -->
            <Button Background="Transparent" BorderThickness="0" Padding="0" Click="TotalOrders_Click">
                <Border Background="#F4F9FF"
                CornerRadius="16"
                Margin="0"
                Padding="0"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                
                >
                    <Grid>
                        <!-- Left colored border -->
                        <Border Background="#297EFF"
                        Width="5"
                        HorizontalAlignment="Left"
                        CornerRadius="8,0,0,8"/>
                        <Grid Margin="20,16,20,16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Title and Icon -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Orders" FontWeight="Bold" FontSize="18" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#297EFF" VerticalAlignment="Top"/>
                            <!-- Value -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="6" FontWeight="Bold" FontSize="32" Margin="0,16,0,0"/>
                            <!-- Subtitle -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="5 processed, 1 pending" FontSize="15" Foreground="#888" Margin="0,8,0,0"/>
                        </Grid>
                    </Grid>
                </Border>
            </Button>
            <Button Background="Transparent" BorderThickness="0" Padding="0" Click="PickList_Click">
                <Border Background="#F4F9FF" BorderBrush="#B3D6FF" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="PickList" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="0" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                        <TextBlock Text="Orders ready for picking" FontSize="14" Foreground="#888"/>
                    </StackPanel>
                </Border>
            </Button>
            <!-- Repeat for other tiles, each with its own Click handler -->
        </UniformGrid>
    </StackPanel>
    <UserControl.Resources>
        <DropShadowEffect x:Key="TileShadow" Color="#22000000" BlurRadius="12" ShadowDepth="2"/>
    </UserControl.Resources>
</UserControl>
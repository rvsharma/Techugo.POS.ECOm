<UserControl x:Class="Techugo.POS.ECOm.Pages.LayoutPage"
             xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar with left border -->
        <Border BorderBrush="#e3e3e3" BorderThickness="0,0,1,0" Grid.Column="0" Background="#fafafa" x:Name="LeftMenu">
            <StackPanel VerticalAlignment="Stretch">
                <TextBlock Text="E-Stock POS" FontWeight="SemiBold" FontSize="20" Margin="24,32,0,0"/>
                <TextBlock Text="Order Management" FontSize="14" Foreground="#888" Margin="24,4,0,24"/>
                <TextBlock Text="Main Menu" FontWeight="SemiBold" FontSize="13" Margin="24,16,0,8"/>
                <ListBox Margin="12,0,12,0"
                         BorderThickness="0"
                         Background="Transparent"
                         SelectedIndex="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,2,0,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBoxItem PreviewMouseLeftButtonUp="OrderDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/order_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Order Dashboard" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="SalesDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/sales_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Sales Dashboard" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="RefundManagementMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/refund_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Refund Management" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="InventoryManagementMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/inventory_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Inventory Management" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0" Background="#FFF" x:Name="HeaderContent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: small square icon + title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0" Grid.Column="0">
                    <Button Style="{StaticResource RoundedWhiteButtonStyle}" Width="30" Height="30" VerticalAlignment="Center" BorderThickness="0" x:Name="ExpandCollapse">
                        <!-- Use an appropriate glyph or SVG here -->
                        <svg:SvgViewbox Source="/Assets/Images/book.svg" Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"/>
                    </Button>

                    <StackPanel Orientation="Vertical" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="E-Stock Order Management" FontWeight="SemiBold" FontSize="20" Foreground="#111"/>
                        <TextBlock Text="Store POS Dashboard" FontSize="13" Foreground="#666" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right: last-updated + bell with badge -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,24,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" Foreground="#666" VerticalAlignment="Center"/>
                        <!-- Bind to your viewmodel/property for live update -->
                        <TextBlock Text="{Binding LastUpdatedText, FallbackValue='Last updated: 1:39:07 PM'}" FontSize="13" Foreground="#666" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Notification bell with red badge -->
                    <Grid Width="42" Height="42" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="#FFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Width="42" Height="42" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="&#xE7ED;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="#222" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Badge -->
                        <Ellipse Width="18" Height="18" Fill="#ff3b30" Stroke="#fff" StrokeThickness="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-6,-6,0"/>
                        <TextBlock Text="{Binding UnreadAlertsCount, FallbackValue=3}" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-9,-6,0" />
                    </Grid>
                </StackPanel>

                <!-- thin bottom divider -->
                <Border Grid.ColumnSpan="2" Height="1" Background="#E5E7EB" VerticalAlignment="Bottom"/>
            </Grid>
            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#fbf9fa">
                <ContentControl x:Name="PageContent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

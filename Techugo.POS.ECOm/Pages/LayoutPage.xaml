<UserControl x:Class="Techugo.POS.ECOm.Pages.LayoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar with left border -->
        <Border BorderBrush="#E5E7EB" BorderThickness="4,0,0,0" Grid.Column="0" Background="#FFF" x:Name="LeftMenu">
            <StackPanel VerticalAlignment="Stretch">
                <TextBlock Text="E-Stock POS" FontWeight="SemiBold" FontSize="20" Margin="24,32,0,0"/>
                <TextBlock Text="Order Management" FontSize="14" Foreground="#888" Margin="24,4,0,24"/>
                <TextBlock Text="Main Menu" FontWeight="SemiBold" FontSize="13" Margin="24,16,0,8"/>
                <ListBox Margin="12,0,12,0"
                         BorderThickness="0"
                         Background="Transparent"
                         SelectedIndex="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,2,0,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBoxItem PreviewMouseLeftButtonUp="OrderDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE80C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Order Dashboard" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="SalesDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Sales Dashboard" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="RefundManagementMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Refund Management" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="InventoryManagementMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Inventory Management" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0" Background="#FFF" Margin="0,0,0,1" x:Name="HeaderContent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Margin="32,0,0,0" VerticalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="E-Stock Order Management" FontWeight="SemiBold" FontSize="22"/>
                    <TextBlock Text="Store POS Dashboard" FontSize="14" Foreground="#444"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,32,0" Grid.Column="1">
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0" VerticalAlignment="Center">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="Last updated: 12:07:05 PM" FontSize="14" Foreground="#444"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="NewOrderAlerts" Background="#FFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Width="34" Height="34" Margin="4,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonUp="NewOrderAlerts_Click">
                            <TextBlock Text="&#xE7ED;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#222" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ContentControl x:Name="PageContent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

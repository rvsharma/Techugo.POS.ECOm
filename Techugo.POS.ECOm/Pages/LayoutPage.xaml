<UserControl x:Class="Techugo.POS.ECOm.Pages.LayoutPage"
             xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Techugo.POS.ECOm.Pages">
    <UserControl.Resources>
        <!-- Menu text style: hide when IsMenuExpanded == false -->
        <Style x:Key="MenuItemTextStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMenuExpanded, RelativeSource={RelativeSource AncestorType=local:LayoutPage}}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Expand / Collapse animations for LeftMenu.Width -->
        <Storyboard x:Key="CollapseMenu">
            <DoubleAnimation Storyboard.TargetName="LeftMenu"
                             Storyboard.TargetProperty="Width"
                             To="52"
                             Duration="0:0:0.28"
                             AccelerationRatio="0.2" DecelerationRatio="0.8"/>
        </Storyboard>
        <Storyboard x:Key="ExpandMenu">
            <DoubleAnimation Storyboard.TargetName="LeftMenu"
                             Storyboard.TargetProperty="Width"
                             To="240"
                             Duration="0:0:0.28"
                             AccelerationRatio="0.2" DecelerationRatio="0.8"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Use Auto so LeftMenu.Width animates cleanly -->
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar with left border -->
        <Border x:Name="LeftMenu" BorderBrush="#e3e3e3" BorderThickness="0,0,1,0" Grid.Column="0" Background="#fafafa" Width="240">
            <StackPanel VerticalAlignment="Stretch">
                <TextBlock Text="E-Stock POS" FontWeight="SemiBold" FontSize="20" Margin="24,16,0,0" Style="{StaticResource MenuItemTextStyle}"/>
                <TextBlock Text="Order Management" FontSize="14" Foreground="#888" Margin="24,4,0,20" Style="{StaticResource MenuItemTextStyle}"/>
                <TextBlock Text="Main Menu" FontWeight="SemiBold" FontSize="13" Margin="24,16,0,8" Style="{StaticResource MenuItemTextStyle}"/>
                <ListBox Margin="12,12,12,0"
         BorderThickness="0"
         Background="Transparent"
         SelectedIndex="0">
                    <ListBox.ItemContainerStyle>
                        <!-- Full control template to avoid theme overrides -->
                        <Style TargetType="ListBoxItem" BasedOn="{x:Null}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,2,0,2"/>
                            <Setter Property="Foreground" Value="#222"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Hover (mouse over) -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                                            </Trigger>

                                            <!-- Selected -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                                                <Setter Property="Foreground" Value="#171717"/>
                                                <Setter Property="FontWeight" Value="DemiBold" />
                                            </Trigger>

                                            <!-- Selected + Hover -->
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem PreviewMouseLeftButtonUp="OrderDashboardMenu_Click" Padding="6">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/order_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Order Dashboard" FontSize="14" VerticalAlignment="Center" Style="{StaticResource MenuItemTextStyle}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem PreviewMouseLeftButtonUp="SalesDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/sales_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Sales Dashboard" FontSize="14" VerticalAlignment="Center" Style="{StaticResource MenuItemTextStyle}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <!--<ListBoxItem PreviewMouseLeftButtonUp="RefundManagementMenu_Click" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/refund_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Refund Management" FontSize="14" VerticalAlignment="Center" Style="{StaticResource MenuItemTextStyle}"/>
                        </StackPanel>
                    </ListBoxItem>-->

                    <ListBoxItem PreviewMouseLeftButtonUp="InventoryManagementMenu_Click" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <svg:SvgViewbox Source="/Assets/Images/inventory_list_icon.svg" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Inventory Management" FontSize="14" VerticalAlignment="Center" Style="{StaticResource MenuItemTextStyle}"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#FFF" x:Name="HeaderContent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: small square icon + title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0" Grid.Column="0">
                    <Button Style="{StaticResource RoundedWhiteButtonStyle}" Width="36" Height="36" VerticalAlignment="Center" BorderThickness="0" x:Name="ExpandCollapse" Click="ExpandCollapse_Click">
                        <svg:SvgViewbox Source="/Assets/Images/book.svg" Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"/>
                    </Button>

                    <StackPanel Orientation="Vertical" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="E-Stock Order Management" FontWeight="SemiBold" FontSize="20" Foreground="#111"/>
                        <TextBlock Text="Store POS Dashboard" FontSize="13" Foreground="#666" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right: last-updated + bell with badge -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,24,0">
                    

                    <Grid Width="42" Height="42" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Height="32"  Width="32" x:Name="RefreshButton"
                            Style="{StaticResource RoundedWhiteButtonStyle}" BorderBrush="#dedede">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <svg:SvgViewbox Source="/Assets/Images/notification.svg" Width="14" Height="14" Margin="8" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Ellipse Width="22" Height="22" Fill="#ff3b30" Stroke="#fff" StrokeThickness="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,-2,0"/>
                        <TextBlock Text="{Binding UnreadAlertsCount, FallbackValue=0}" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,3,0" />
                    </Grid>
                </StackPanel>

                <!-- thin bottom divider -->
                <Border Grid.ColumnSpan="2" Height="1" Background="#E5E7EB" VerticalAlignment="Bottom"/>
            </Grid>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="#fbf9fa">
                <ContentControl x:Name="PageContent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

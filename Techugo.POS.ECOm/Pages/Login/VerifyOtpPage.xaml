<UserControl x:Class="Techugo.POS.ECOm.Pages.Login.VerifyOtpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Brushes -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E8FBF1" Offset="0.0"/>
            <GradientStop Color="#E3FAEE" Offset="1.0"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#00A857"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#008236"/>
        <SolidColorBrush x:Key="MutedText" Color="#6B6B6B"/>
        <SolidColorBrush x:Key="HeadingText" Color="#111111"/>
        <SolidColorBrush x:Key="LightCard" Color="#FFFFFF"/>
        <DropShadowEffect x:Key="CardShadow" Color="#22000000" BlurRadius="18" ShadowDepth="6" Opacity="0.6"/>
        <Style x:Key="OtpBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F3F7F6"/>
            <Setter Property="BorderBrush" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#B3BDC0"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#44000000" BlurRadius="6" ShadowDepth="1" Opacity="0.35"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="#7F7B81"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F4F3"/>
            <Setter Property="Foreground" Value="#3A3A3A"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72B;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Shield Icon -->
        
        <!-- Title & Subtitle -->
        <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,16,0,0">
			<Button Style="{StaticResource BackButtonStyle}" Content="Back to Login" HorizontalAlignment="Left" Margin="0,0,0,18"/>
			<Border Grid.Row="1" Width="72" Height="72" CornerRadius="36" Background="{StaticResource PrimaryGreen}" HorizontalAlignment="Center" Margin="0,16,0,0">
				<TextBlock Text="&#xEBD3;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
			</Border>
			<TextBlock Text="Verify OTP" FontSize="28" FontWeight="Bold" Foreground="{StaticResource HeadingText}" HorizontalAlignment="Center" Margin="0,0,0,6"/>
            <TextBlock Text="Enter the 6-digit code sent to" FontSize="15" Foreground="{StaticResource MutedText}" HorizontalAlignment="Center"/>
            <TextBlock Text="+91 9540415052" FontSize="16" FontWeight="Bold" Foreground="{StaticResource HeadingText}" HorizontalAlignment="Center" Margin="0,8,0,18"/>
            <!-- Card -->
            <Border Background="{StaticResource LightCard}" CornerRadius="16" Padding="32" Width="520"
                    Effect="{StaticResource CardShadow}" HorizontalAlignment="Center">
                <StackPanel>
                    <!-- Enter Verification Code header with green check icon -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40  ">
                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource AccentGreen}" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Enter Verification Code" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource HeadingText}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- OTP boxes -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">
                        <!-- First box: left rounded -->
                        <TextBox x:Name="OtpBox1" Style="{StaticResource OtpBoxStyle}" >
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8,0,0,8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <!-- Middle boxes: no radius -->
                        <TextBox x:Name="OtpBox2" Style="{StaticResource OtpBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="0"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBox x:Name="OtpBox3" Style="{StaticResource OtpBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="0"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBox x:Name="OtpBox4" Style="{StaticResource OtpBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="0"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBox x:Name="OtpBox5" Style="{StaticResource OtpBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="0"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <!-- Last box: right rounded -->
                        <TextBox x:Name="OtpBox6" Style="{StaticResource OtpBoxStyle}" Margin="0">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="0,8,8,0"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                    <!-- Resend OTP -->
                    <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" Cursor="Hand" Padding="0" Margin="0,0,0,40">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource AccentGreen}" FontSize="18" Margin="0,0,6,0"/>
                            <TextBlock Text="Resend OTP" Foreground="{StaticResource AccentGreen}" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <!-- Verify button -->
                    <Button Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch" Margin="0,0,0,40" Click="VerifyButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE930;" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Verify &amp; Login" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <!-- Demo mode box -->
                    <Border Background="#F1FBF4" CornerRadius="8" Padding="14" Margin="0,0,0,0">
                        <TextBlock FontSize="13" TextWrapping="Wrap">
                            <Run Text="Demo Mode: " FontWeight="Bold" Foreground="{StaticResource AccentGreen}"/>
                            <Run Text="Enter any 6-digit OTP to proceed, or use " Foreground="{StaticResource AccentGreen}"/>
                            <Run Text="123456" FontWeight="Bold" Foreground="{StaticResource AccentGreen}"/>
                            <Run Text=" for quick access." Foreground="{StaticResource AccentGreen}"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
        <!-- Bottom hint -->
        <TextBlock Grid.Row="3" Text="Didn't receive the code? Check your SMS or try resending." FontSize="13" Foreground="{StaticResource MutedText}" HorizontalAlignment="Center" Margin="0,18,0,0"/>
    </Grid>
</UserControl>
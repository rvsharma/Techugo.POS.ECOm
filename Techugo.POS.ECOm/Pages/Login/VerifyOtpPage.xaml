<UserControl x:Class="Techugo.POS.ECOm.Pages.Login.VerifyOtpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#E6FAF0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,16">
                <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#222" VerticalAlignment="Center"/>
                <TextBlock Text="Back to Login" FontSize="16" Foreground="#222" FontWeight="SemiBold" Margin="6,0,0,0" VerticalAlignment="Center" Cursor="Hand"/>
            </StackPanel>
            <Border Background="#00C853" CornerRadius="50" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,16">
                <TextBlock Text="&#xEBD3;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock Text="Verify OTP" FontWeight="Bold" FontSize="28" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="Enter the 6-digit code sent to" FontSize="16" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,0"/>
            <TextBlock Text="+91 9540415052" FontSize="18" Foreground="#222" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <Border Background="White" CornerRadius="20" Padding="32" Width="420" HorizontalAlignment="Center">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="&#xE930;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#00C853" Margin="0,0,8,0"/>
                        <TextBlock Text="Enter Verification Code" FontWeight="SemiBold" FontSize="18" Foreground="#222"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBox Width="40" Height="40" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"/>
                        <TextBox Width="40" Height="40" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"/>
                        <TextBox Width="40" Height="40" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"/>
                        <TextBox Width="40" Height="40" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"/>
                        <TextBox Width="40" Height="40" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"/>
                        <TextBox Width="40" Height="40" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"/>
                    </StackPanel>
                    <TextBlock Text="Resend OTP in 0:21" FontSize="14" Foreground="#00C853" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <Button Content="&#xE930;  Verify &amp; Login"
                            Height="40"
                            Background="#888"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="16"
                            BorderThickness="0"
                            Margin="0,0,0,18"
                            Cursor="Hand"
                            Click="VerifyButton_Click"/>
                    <Border Background="#E6FAF0" CornerRadius="10" Padding="12" Margin="0,0,0,0">
                        <TextBlock>
                            <Run Text="Demo Mode: " FontWeight="Bold" Foreground="#00C853"/>
                            <Run Text="Enter any 6-digit OTP to proceed, or use "/>
                            <Run Text="123456" FontWeight="Bold" Foreground="#00C853"/>
                            <Run Text=" for quick access."/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
            <TextBlock Text="Didn't receive the code? Check your SMS or try resending."
                       FontSize="13"
                       Foreground="#888"
                       HorizontalAlignment="Center"
                       Margin="0,24,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="Techugo.POS.ECOm.Pages.Login.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#F3F6FD">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="Black" CornerRadius="50" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,16">
                <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock Text="E-Stock Order Management" FontWeight="Bold" FontSize="28" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="Store POS Login" FontSize="16" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <Border Background="White" CornerRadius="20" Padding="32" Width="420" HorizontalAlignment="Center" >
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#222" Margin="0,0,8,0"/>
                        <TextBlock Text="Mobile Login" FontWeight="SemiBold" FontSize="18" Foreground="#222"/>
                    </StackPanel>
                    <TextBlock Text="Enter your registered mobile number to receive OTP" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                    <TextBlock Text="Mobile Number" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
                    <DockPanel Margin="0,0,0,12">
                        <TextBlock Text="+91" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="MobileNumberTextBox"
                                 Width="320"
                                 Height="36"
                                 FontSize="14"
                                 Padding="12,0"
                                 Background="#F3F4F6"
                                 BorderBrush="#E5E7EB"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"
                                 
								 />
                    </DockPanel>
                    <Button Content="Send OTP  â†’"
                            Height="40"
                            Background="#888"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="16"
                            BorderThickness="0"
                            Margin="0,0,0,18"
                            Cursor="Hand"
                            Click="SendOtpButton_Click"/>
                    <Border Background="#F6F8FF" CornerRadius="10" Padding="12" Margin="0,0,0,0">
                        <TextBlock>
                            <Run Text="Note: " FontWeight="Bold" Foreground="#297EFF"/>
                            <Run Text="OTP will be sent to your registered mobile number. Please ensure you have access to receive SMS." Foreground="#297EFF"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
            <TextBlock Text="Secure login powered by E-Stock Management System"
                       FontSize="13"
                       Foreground="#888"
                       HorizontalAlignment="Center"
                       Margin="0,24,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

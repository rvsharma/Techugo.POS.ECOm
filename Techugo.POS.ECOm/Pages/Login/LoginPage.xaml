<UserControl x:Class="Techugo.POS.ECOm.Pages.Login.LoginPage"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                       >
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="materialDesign:Snackbar">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#222" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="24,8" />
            <!-- You can add more setters as needed -->
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#EFF6FF" Offset="0.0"/>
                <!-- from-blue-50 -->
                <GradientStop Color="#E0E7FF" Offset="1.0"/>
                <!-- to-indigo-100 -->
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="Black" CornerRadius="50" Width="64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <svg:SvgViewbox Source="/Assets/Images/store_icon.svg" Width="30" Height="30" VerticalAlignment="Center" Margin="8,0,8,0"/>
                    </Border>
                    <TextBlock Text="E-Stock Order Management" FontWeight="Bold" FontSize="24" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <TextBlock Text="Store POS Login" FontSize="16" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                    <Border Background="White" CornerRadius="20" Padding="32" Width="420" HorizontalAlignment="Center" >
                        <Border.Effect>
                            <DropShadowEffect 
                                ShadowDepth="4" 
                                Direction="330" 
                                Color="Black" 
                                Opacity="0.25" 
                                BlurRadius="8" />
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                                <svg:SvgViewbox Source="/Assets/Images/mobile_icon.svg" Width="20" Height="20" VerticalAlignment="Center" Margin="8,0,8,0" />
                                <TextBlock Text="Mobile Login" FontWeight="Normal" FontSize="16" Foreground="#000000"/>
                            </StackPanel>
                            <TextBlock Text="Enter your registered mobile number to receive OTP" 
                   FontSize="14" Foreground="#000000" HorizontalAlignment="Center" FontWeight="Light"
                   Margin="0,0,0,16" TextWrapping="Wrap"/>

                            <TextBlock Text="Mobile Number" FontWeight="Bold" FontSize="13" Foreground="#222222" Margin="0,0,0,6"/>

                            <!-- FIX: Replace DockPanel with Border to support CornerRadius -->
                            <Border Margin="0,0,0,8" Background="#F3F4F6" Height="36" CornerRadius="8">
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="+91" FontSize="14" Foreground="#888888" VerticalAlignment="Center" Margin="12,0,8,0"/>
                                    <TextBox x:Name="MobileNumberTextBox"
                                 Width="280"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"
                                 Foreground="#0a0a0a"
                                 VerticalContentAlignment="Center"
                                 Padding="0"
                                 />
                                </DockPanel>
                            </Border>
                            <TextBlock x:Name="MobilePreviewTextBlock"
							   FontSize="12"
							   Foreground="#888"
							   Margin="0,0,0,16"
							   Visibility="Collapsed"
/>
                            <Button x:Name="SendOtpButton"
                        Content="Send OTP  â†’"
                        Height="38"
                        Background="#7E7E87"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Margin="0,8,0,16"
                        Cursor="Hand"
                        Click="SendOtpButton_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                />

                            <Border Background="#eff6ff" CornerRadius="8" Padding="12" >
                                <TextBlock TextWrapping="Wrap" FontSize="12">
                <Run Text="Note: " FontWeight="Bold" Foreground="#1447e6"/>
                <Run Text="OTP will be sent to your registered mobile number. Please ensure you have access to receive SMS." Foreground="#1447e6"/>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Secure login powered by E-Stock Management System"
                       FontSize="13"
                       Foreground="#888"
                       HorizontalAlignment="Center"
                       Margin="0,24,0,0"/>
                </StackPanel>

            </Grid>
        </ScrollViewer>
        <materialDesign:Snackbar x:Name="SuccessSnackbar"
      VerticalAlignment="Bottom"
      HorizontalAlignment="Right"
      Margin="0,0,24,24"
      materialDesign:Snackbar.MessageQueue="{Binding SnackbarMessageQueue}" />
    </Grid>
</UserControl>

<Window
    x:Class="Techugo.POS.ECOm.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="E-Stock POS" Height="900" Width="1700" Background="#FAFAFB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar with left border -->
        <Border BorderBrush="#E5E7EB" BorderThickness="4,0,0,0" Grid.Column="0" Background="#FFF">
            <StackPanel VerticalAlignment="Stretch">
                <TextBlock Text="E-Stock POS" FontWeight="Bold" FontSize="24" Margin="24,32,0,0"/>
                <TextBlock Text="Order Management" FontSize="14" Foreground="#888" Margin="24,4,0,24"/>
                <TextBlock Text="Main Menu" FontWeight="SemiBold" FontSize="13" Margin="24,16,0,8"/>
                <ListBox Margin="12,0,12,0" BorderThickness="0" Background="Transparent">
                    <ListBoxItem PreviewMouseLeftButtonUp="OrderDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8D2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Order Dashboard" FontWeight="Bold"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="SalesDashboardMenu_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Sales Dashboard"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="RefundManagementMenu_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE90A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Refund Management"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem PreviewMouseLeftButtonUp="InventoryManagementMenu_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Inventory Management"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Background="#FFF" LastChildFill="True" Margin="0,0,0,1">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Margin="32,0,0,0">
                    <TextBlock Text="E-Stock Order Management" FontWeight="Bold" FontSize="22"/>
                    <TextBlock Text="Store POS Dashboard" FontSize="14" Foreground="#888"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,32,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Last updated: 12:07:05 PM" FontSize="14" Foreground="#888"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#F44336" CornerRadius="10" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ContentControl x:Name="DashboardContent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

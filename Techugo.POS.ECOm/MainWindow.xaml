<Window
    x:Class="Techugo.POS.ECOm.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="E-Stock POS" Height="900" Width="1700" Background="#FAFAFB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar with left border -->
        <Border BorderBrush="#E5E7EB" BorderThickness="4,0,0,0" Grid.Column="0" Background="#FFF">
            <StackPanel VerticalAlignment="Stretch">
                <TextBlock Text="E-Stock POS" FontWeight="Bold" FontSize="24" Margin="24,32,0,0"/>
                <TextBlock Text="Order Management" FontSize="14" Foreground="#888" Margin="24,4,0,24"/>
                <TextBlock Text="Main Menu" FontWeight="SemiBold" FontSize="13" Margin="24,16,0,8"/>
                <ListBox Margin="12,0,12,0" BorderThickness="0" Background="Transparent" SelectedIndex="0">
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8D2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Order Dashboard" FontWeight="Bold"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Sales Dashboard"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE90A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Refund Management"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                            <TextBlock Text="Inventory Management"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Background="#FFF" LastChildFill="True" Margin="0,0,0,1">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Margin="32,0,0,0">
                    <TextBlock Text="E-Stock Order Management" FontWeight="Bold" FontSize="22"/>
                    <TextBlock Text="Store POS Dashboard" FontSize="14" Foreground="#888"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,32,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Last updated: 12:07:05 PM" FontSize="14" Foreground="#888"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#F44336" CornerRadius="10" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,32,32,32">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Order Dashboard" FontWeight="Bold" FontSize="28"/>
                        <StackPanel Orientation="Horizontal" Margin="32,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Last updated: 12:17:27 PM" FontSize="14" Foreground="#888"/>
                        </StackPanel>
                        <Button Content="Refresh" Margin="16,0,0,0" Padding="16,4" FontWeight="SemiBold" Background="#FFF" BorderBrush="#222" BorderThickness="1" />
                    </StackPanel>
                    <TextBlock Text="Real-time order status overview" FontSize="16" Foreground="#888" Margin="0,4,0,16"/>

                    <!-- Alerts -->
                    <StackPanel>
                        <Border Background="#FFF7F0" BorderBrush="#FFD6B3" BorderThickness="1" CornerRadius="8" Margin="0,0,0,8" Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#F44336" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="5 orders waiting in Previous Day Carry-Forward" Foreground="#F44336" FontSize="15"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F4F9FF" BorderBrush="#B3D6FF" BorderThickness="1" CornerRadius="8" Margin="0,0,0,16" Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Peak hour: 25% more orders than usual" Foreground="#2196F3" FontSize="15"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Dashboard Cards -->
                    <UniformGrid Columns="4" Rows="2" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <!-- Total Orders -->
                        <Border Background="#F4F9FF" BorderBrush="#B3D6FF" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Total Orders" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="6" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="5 processed, 1 pending" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Pick List -->
                        <Border Background="#FFFDEB" BorderBrush="#FFE9B3" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Pick List" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="0" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="Orders ready for picking" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Assign Rider -->
                        <Border Background="#F9F4FF" BorderBrush="#E3B3FF" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Assign Rider" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE806;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="0" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="Ready for rider assignment" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Pending Delivery -->
                        <Border Background="#FFF7F0" BorderBrush="#FFD6B3" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Pending Delivery" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="1" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="Orders in transit" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Delivered -->
                        <Border Background="#F0FFF7" BorderBrush="#B3FFD6" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Delivered" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="3" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="Successfully delivered" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Rejected -->
                        <Border Background="#FFF0F0" BorderBrush="#FFB3B3" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Rejected" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="1" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="Cancelled or failed delivery" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Partial Returns -->
                        <Border Background="#F4F9FF" BorderBrush="#B3D6FF" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Partial Returns" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="2" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="₹450 refund amount" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                        <!-- Previous Day Carry-Forward -->
                        <Border Background="#FFF7F0" BorderBrush="#FFD6B3" BorderThickness="1" CornerRadius="16" Margin="8" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Previous Day Carry-Forward" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="5" FontWeight="Bold" FontSize="32" Margin="0,8,0,0"/>
                                <TextBlock Text="Orders received after 9 PM cutoff" FontSize="14" Foreground="#888"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
